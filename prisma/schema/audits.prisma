model Audits {
    uuid   String  @id @unique @default(uuid())
    entity String? @db.Text()
    method String? @db.Text()

    userUuid String?
    user     Users?  @relation(fields: [userUuid], references: [uuid])

    oldData Json? @db.Json()
    newData Json? @db.Json()

    url String? @db.Text()

    ip        String? @db.Text()
    userAgent String? @db.Text()

    createdAt DateTime @default(now())

    @@index([entity])
    @@index([userUuid])
    @@map("audits")
}
